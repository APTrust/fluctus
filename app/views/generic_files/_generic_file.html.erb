<% # container for a single doc -%>
<div class="document <%= render_document_class generic_file %>">

  <% # header bar for doc items in index view -%>
  <section class="documentHeader clearfix">

    <%- # main title container for doc partial view -%>
    <h5 class="index_title col-sm-9 col-lg-9">
      <% counter = document_counter_with_offset(generic_file_counter) %>
      <%= t('blacklight.search.documents.counter', :counter => counter) if counter %>
      <%= link_to_document generic_file, :label=>Array(generic_file['tech_metadata__identifier_ssim']).first, :counter => counter %>
    </h5>

    <% # bookmark functions for items/docs -%>
    <%= render_index_doc_actions generic_file, :wrapping_class => "index-document-functions col-sm-3 col-lg-3" %>
  </section>

  <dl class="document-metadata dl-horizontal dl-invert">

    <dt> Institution: </dt>
    <dd> <%= Array(generic_file['gf_institution_title_ssim']).first %> </dd>

    <dt> MimeType: </dt>
    <dd> <%= Array(generic_file['tech_metadata__file_format_ssi']).first %> </dd>

    <dt> Filesize: </dt>
    <dd> <%= number_to_human_size(Array(generic_file['tech_metadata__file_size_lsi']).first) %> </dd>

    <dt> Created: </dt>
    <dd> <%= Array(generic_file['tech_metadata__created_ssim']).first %> </dd>

    <dt> Last Modified: </dt>
    <dd> <%= Array(generic_file['tech_metadata__modified_ssim']).first %> </dd>

    <% if generic_file['object_state_ssi'] == 'D' %>
        <dt>State</dt>
        <dd>Deleted</dd>
    <% end %>
  </dl>
</div>

