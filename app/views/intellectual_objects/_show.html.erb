<div id="content" class="col-md-9 show-document">

  <ol class="breadcrumb">
    <li><%= link_to @intellectual_object.institution.name, @intellectual_object.institution %></li>
    <li class="active"><%= @intellectual_object.title %></li>
  </ol>

  <section class="page-header">
    <h2><%= @intellectual_object.title %></h2>
  </section>

  <section class="object_info">
    <dl class="dl-horizontal dl-invert">
      <dt>Institution</dt>
      <dd><%= link_to @intellectual_object.institution.name, @intellectual_object.institution %> [<%= @intellectual_object.institution.brief_name %>]</dd>
      <dt>Rights</dt>
      <dd><%= @intellectual_object.rights %></dd>
      <dt>Identifier</dt>
      <% @intellectual_object.identifier.each do |ident| %>
          <dd><%= ident %></dd>
      <% end %>
      <dt> Last Modified </dt>
      <dd> <%= @intellectual_object.modified_date %> </dd>
    </dl>
  </section>

  <section id="io-sidebar" class="col-md-3">
    <%= render_document_sidebar_partial %>
  </section>
  <section class="object_events">
    <%= link_to "View Events", intellectual_object_events_path(@intellectual_object), class: 'btn btn-primary' %>
  </section>
  <section class="object_children">
    <h3>Preserved Files</h3>
    <% @intellectual_object.generic_files.each_with_index do |gf, index| %>
        <% counter = index+1%>
        <div class="documentHeader clearfix"><h5 class="index_title col-sm-9 col-lg-9">
          <%= t('blacklight.search.documents.counter', :counter => counter) if counter %>
          <%= link_to gf.uri, gf  %>
        </h5></div>

        <dl class="document-metadata dl-horizontal dl-invert">
          <dt>Last Fixity</dt>
          <dd><span class="label label-success">Success</span></dd>
          <dt>MimeType<dt>
          <dd><%= gf.format %></dd>
          <dt>Filesize<dt>
          <dd><%= number_to_human_size(gf.size) %></dd>
        </dl>

    <% end %>
  </section>
</div>
