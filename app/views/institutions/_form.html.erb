<%= simple_form_for(@institution, html: {class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>
  <br>
  <div class="form-actions">
    <%= f.button :submit, "Submit", {class: "btn btn-success"} %>
    <%= show_link @user, "Cancel", {class: "btn btn-danger"} %>
  </div>
<% end %>
