<%= form_tag action: 'search', method: :get, class: 'search-query-form form-inline clearfix', controller: "processed_item" do %>
    <div class="input-group">

      <span class="input-group-addon">
        <label for="search_field" class="sr-only">Processed Item Search</label>
        <%= select_tag(:search_field, options_for_select(['All Fields', 'Name', 'Etag'], h(params[:search_field])), :class=>"search_field") %>
        </span>
      <label for="q" class="sr-only">Search Box</label>
      <%= text_field_tag :qq, params[:qq], :placeholder => 'Search...', :class => "search_q q form-control", :id => "qq", :autofocus => should_autofocus_on_search_box? %>

      <span class="input-group-btn">
        <button type="submit" class="btn btn-primary search-btn" id="pi_search">
          <span class="submit-search-text">Search</span>
          <span class="glyphicon glyphicon-search"></span>
        </button>
        </span>
    </div>
<% end %>