<div class="page-header">
  <h1>Users</h1>
</div>

<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Institution</th>
      <th>Role</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.institution_name %></td>
        <td><%= show_link user %> <%= edit_link user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= create_link(User) %>
