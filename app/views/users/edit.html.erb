<div class="page-header">
  <h1>Editing User</h1>
</div>

<%= simple_form_for(@user, url: user_registration_path(@user), html: {class: 'form-horizontal', :method => :put}) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name, autofocus: true %>
      <%= f.input :email %>
      <%= f.input :phone_number %>

      <%= f.input :institution_pid, collection: institutions_for_select, as: :select, label: "Institution" %>

      <%= f.association :roles, collection: roles_for_select, as: :check_boxes %>

    </div>

    <div class="form-actions">
      <%= f.button :submit, "Submit", {class: "btn btn-success"} %>
      <%= show_link @user, "Cancel" %>
    </div>
<% end %>

