<address>
  <strong><%= @user.name %></strong> (<em><%= @user.institution_name %></em>)<br>
  <a href="mailto:#"><%= @user.email %></a><br>
  <abbr title="Phone">P:</abbr><%= @user.phone_number %><br><br>
</address>

<h4>Roles</h4>
<ul class="unstyled">
<% @user.roles.each do |role| %>
  <li><%= role.name.titleize %></li>
<% end %>
</ul>

<%= edit_link(@user) %>
<%= destroy_link(@user) %>
