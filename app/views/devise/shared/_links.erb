<%- if controller_name != 'sessions' %>
  <%= link_to new_session_path(resource_name), {class: "btn doc-action-btn btn-normal"} do %>
      <i class="glyphicon glyphicon-log-in"></i> Sign In
  <% end %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to new_registration_path(resource_name), {class: "btn doc-action-btn btn-normal"} do %>
      <i class="glyphicon glyphicon-new-window"></i> Sign Up
  <% end %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= link_to new_password_path(resource_name), {class: "btn doc-action-btn btn-normal"} do %>
      <i class="glyphicon glyphicon-question-sign"></i> Forgot your password?
  <% end %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to new_confirmation_path(resource_name), {class: "btn doc-action-btn btn-normal"} do %>
      <i class="glyphicon glyphicon-question-sign"></i> Didn't receive confirmation instructions?
  <% end %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to new_unlock_path(resource_name), {class: "btn doc-action-btn btn-normal"} do %>
      <i class="glyphicon glyphicon-question-sign"></i> Didn't receive unlock instructions?
  <% end %><br />
<% end -%>