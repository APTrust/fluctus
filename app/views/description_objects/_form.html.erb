<%= simple_form_for(@description_object, html: {class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :dpn_status, collection: ["true", "false"], as: :radio_buttons %>
  </div>
  
  <div class="form-actions">
    <%= f.button :submit, "Submit", {class: "btn btn-success"} %>
    <%= show_link @description_object, "Cancel" %>
  </div>
<% end %>
